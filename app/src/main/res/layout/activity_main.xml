<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextCustomerName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:hint="Name"
        android:background="#EEE6A8"
        android:inputType="textPersonName"
        />
    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextCustomerName"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#EEE6A8"
        android:hint="Phone Number"
        android:inputType="phone"
        />
    <EditText
        android:id="@+id/editTextArea"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/editTextPhone"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="#EEE6A8"
        android:hint="Area"
        android:inputType="text"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_below="@id/editTextArea"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FAA3A1"
        android:text="item 1"
        android:gravity="center"
        android:paddingStart="15dp"
        android:layout_alignStart="@id/editTextArea"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@id/editTextArea"
        android:paddingLeft="15dp" />

    <Spinner
        android:id="@+id/item1Spinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/editTextArea"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:entries="@array/bill_pad"
        android:background="#CBFA86EE"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/textView"
        android:layout_toRightOf="@id/textView"
        />

    <EditText
        android:id="@+id/editTxtQty1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/item1Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/item1Spinner"
        android:background="#D8C2F56F"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item1Spinner" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_below="@id/textView"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FAA3A1"
        android:text="item 2"
        android:gravity="center"
        android:paddingStart="15dp"
        android:layout_alignStart="@id/textView"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@id/textView"
        android:paddingLeft="15dp" />

    <Spinner
        android:id="@+id/item2Spinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/item1Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:entries="@array/bill_pad"
        android:background="#CBFA86EE"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/textView1"
        android:layout_toRightOf="@id/textView1"
        />

    <EditText
        android:id="@+id/editTxtQty2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/item2Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/item2Spinner"
        android:background="#D8C2F56F"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item2Spinner" />


    <Button
        android:id="@+id/pdf"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Create Invoice"
        android:clickable="true"
        android:layout_below="@id/textView1"
        android:layout_marginTop="250dp"
        android:background="#50B1F1"
        android:layout_alignStart="@id/textView1"
        android:layout_alignEnd="@id/editTxtQty2"
        android:layout_alignLeft="@id/textView1"
        android:layout_alignRight="@id/editTxtQty2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_below="@id/textView1"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FAA3A1"
        android:text="item 3"
        android:gravity="center"
        android:paddingStart="15dp"
        android:layout_alignStart="@id/textView1"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@id/textView1"
        android:paddingLeft="15dp" />

    <Spinner
        android:id="@+id/item3Spinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/item2Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:entries="@array/bill_pad"
        android:background="#CBFA86EE"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        />

    <EditText
        android:id="@+id/editTxtQty3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/item3Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/item3Spinner"
        android:background="#D8C2F56F"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item3Spinner" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_below="@id/textView2"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FAA3A1"
        android:text="item 4"
        android:gravity="center"
        android:paddingStart="15dp"
        android:layout_alignStart="@id/textView2"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@id/textView2"
        android:paddingLeft="15dp" />

    <Spinner
        android:id="@+id/item4Spinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/item3Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:entries="@array/bill_pad"
        android:background="#CBFA86EE"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/textView2"
        android:layout_toRightOf="@id/textView2"
        />

    <EditText
        android:id="@+id/editTxtQty4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/item4Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/item4Spinner"
        android:background="#D8C2F56F"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item4Spinner" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="48dp"
        android:layout_below="@id/textView3"
        android:layout_marginStart="0dp"
        android:layout_marginTop="20dp"
        android:background="#FAA3A1"
        android:text="item 5"
        android:gravity="center"
        android:paddingStart="15dp"
        android:layout_alignStart="@id/textView3"
        android:layout_marginLeft="0dp"
        android:layout_alignLeft="@id/textView3"
        android:paddingLeft="15dp" />

    <Spinner
        android:id="@+id/item5Spinner"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@id/item4Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="22dp"
        android:entries="@array/bill_pad"
        android:background="#CBFA86EE"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@id/textView5"
        android:layout_toRightOf="@id/textView5"
        />

    <EditText
        android:id="@+id/editTxtQty5"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignTop="@id/item5Spinner"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="1"
        android:ems="10"
        android:inputType="number"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/item5Spinner"
        android:background="#D8C2F56F"
        android:layout_marginLeft="5dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/item5Spinner" />


</RelativeLayout>